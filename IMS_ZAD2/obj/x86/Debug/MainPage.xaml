<Page x:ConnectionId='1'
    x:Class="IMS_ZAD2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:IMS_ZAD2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:IMS_ZAD2.Models"
    mc:Ignorable="d">

    <ScrollViewer
        HorizontalAlignment="Stretch">
        
        <StackPanel>

            <StackPanel x:ConnectionId='2' 
                x:Name="stackPanel1"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Orientation="Vertical"
                Visibility="Visible">

                <Button x:ConnectionId='14'
                    Content="Študíjny program"
                                        
                    VerticalAlignment="Center"
                HorizontalAlignment="Center"/>

                <Button x:ConnectionId='15'
                    Content="Rest"
                                          
                    VerticalAlignment="Center"
                HorizontalAlignment="Center"/>

            </StackPanel>

            <StackPanel x:ConnectionId='3' 
                x:Name="stackPanel2"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Orientation="Vertical"
                Visibility="Collapsed">

                <TextBox x:ConnectionId='12'
                    x:Name="labelText"
                    Height="400"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"/>

                <Button x:ConnectionId='13'
                    Content="Navrat"
                                          
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"/>

            </StackPanel>

            <GridView x:ConnectionId='4'
                x:Name="tabulka" 
                Visibility="Collapsed"
                                            
                Width="900">
                <GridView.ItemTemplate>
                    <DataTemplate
                                              >
                        <StackPanel x:ConnectionId='5'
                            Orientation="Horizontal">
                            <TextBox x:ConnectionId='6'
                                                     />
                            <TextBox x:ConnectionId='7'
                                                     />
                            <TextBox x:ConnectionId='8'
                                                     />
                            <TextBox x:ConnectionId='9'
                                                     />
                            <TextBox x:ConnectionId='10'
                                                     />
                            <TextBox x:ConnectionId='11'
                                                     />
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
            
        </StackPanel>
    </ScrollViewer>
    <!--<Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}"> 
    </Grid> -->
</Page>

